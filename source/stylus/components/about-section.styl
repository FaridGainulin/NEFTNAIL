    width 50px
    height: auto
    top: 77px;
    left: -13px;
    +above($breakpoints.sm)
      width 80px
      top: 98px
      left: 0
    +above($breakpoints.md)
      width 100px
      top: 152px
      left: 0
    +above($breakpoints.xxl)
      width 137px
