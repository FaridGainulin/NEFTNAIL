  &__arrows
    width 20px
    height: 12px
    margin 15px auto 15px
    +above($breakpoints.sm)
      width 39px
      height: 25px
      margin 20px auto 20px
    +above($breakpoints.md)
      margin 40px auto 40px
    +above($breakpoints.xxl)
      margin 65px auto 50px

  &__history-block-1
    position relative
    background-image: url('../images/about-section-history-block-1-bg.jpg')
    background-repeat: no-repeat
    background-position: center
    background-size: cover
    background-color #1e1e1e
    padding 20px 10px 20px 10px
    text-align: center
    border-radius: 20px
    +above($breakpoints.sm)
      padding 20px 20px 20px 40px
      text-align: start
    +above($breakpoints.md)
      padding 40px 20px 30px 50px
      border-radius: 25px
    +above($breakpoints.xxl)
      border-radius: 30px
      padding 62px 10px 50px 105px

  &__history-block-1-logo
    width 75px
    height: 46px
    margin-bottom 20px
    +above($breakpoints.md)
      margin-bottom 42px
      width 152px
      height: 93px

  &__history-block-1-img
    position: absolute
    width 50px
    height: auto
    top: -12px;
    right: -12px;
    +above($breakpoints.sm)
      width 80px
      top: -17px;
      right: -18px;
    +above($breakpoints.md)
      width 120px
      top: -17px;
      right: -30px;
    +above($breakpoints.xxl)
      width 147px
      top: -29px;
      right: -36px;

  &__history-block-2
    text-align: center
    position relative
    background-color #fff
    border-radius: 20px
    padding 20px 10px 20px 10px
    display: flex
    flex-direction: column
    gap: 15px
    margin-top 15px
    +above($breakpoints.sm)
      flex-direction: row
      align-items: center
      justify-content center
      text-align: start
      padding 30px 20px 30px 20px
      margin-top 30px
    +above($breakpoints.md)
      border-radius: 25px
      padding 30px 20px 30px 20px
      margin-top 50px
      justify-content space-between
    +above($breakpoints.xxl)
      justify-content start
      border-radius: 30px
      padding 44px 47px 51px 52px
      margin-top 64px
      gap: 290px

  &__history-block-2-img
    display: none
    +above($breakpoints.md)
      display: block
      position: absolute
      width 120px
      height: auto
      bottom: 0
      left: 48%
      transform: translateX(-50%)
    +above($breakpoints.xxl)
      width 158px

  &__history-block-3
    text-align: center
    +above($breakpoints.sm)
      position relative
      text-align: start
      margin-left 390px
    +above($breakpoints.md)
      margin-left 562px
    +above($breakpoints.xxl)
      margin-left 745px

  &__history-block-3-arrow
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      width 54px
      height: 23px
      bottom: -37px;
      left: -36px;
    +above($breakpoints.md)
      width 68px
      height: 29px
      bottom: -39px;
      left: -33px;
    +above($breakpoints.xxl)
      bottom: -80px;
      left: -38px;
      width: 88px;
      height: 55px;

  &__history-block-3-img
    width 100px
    height: auto
    margin: -10px auto -20px;
    +above($breakpoints.sm)
      margin: -10px 0 -20px -38px;
      width 150px
    +above($breakpoints.md)
      width 200px
    +above($breakpoints.xxl)
      width 450px
      margin: -60px 0 -120px -122px;

  &__bottom
    position relative
    z-index 1
    width 100%
    max-width: 610px
    background-color $color-red
    border-radius: 20px
    padding 20px 10px
    text-align: center
    margin-top 15px
    +above($breakpoints.sm)
      position: absolute
      left: 0
      bottom: -50px
      max-width: 330px
      margin 0
      text-align: start
      padding 20px 20px 20px 20px
    +above($breakpoints.md)
      bottom: -70px
      max-width: 500px
      padding 35px 20px 43px 43px
    +above($breakpoints.xxl)
      bottom: -105px
      max-width: 610px
      padding 45px 20px 53px 63px

  &__bottom-img
    display: none
    +above($breakpoints.md)
      display: block
      position: absolute
      width 200px
      height: auto
      bottom: 10px
      right: 0
    +above($breakpoints.xxl)
      width 339px
      bottom: 19px

  &__bottom-sub-title
    padding 15px 0 15px 0
    +above($breakpoints.sm)
      padding 15px 0 20px 0
    +above($breakpoints.md)
      padding 20px 0 25px 0
    +above($breakpoints.xxl)
      padding 23px 0 32px 0

  &__form
    width 100%
    max-width: 300px
    border-radius: 13px
    backdrop-filter: blur(10px);
    background: linear-gradient(132deg, #323031 0%, #292929 100%);
    padding 15px
    display: flex
    flex-direction: column
    align-items: center
    gap: 8px
    +above($breakpoints.md)
      gap 10px

