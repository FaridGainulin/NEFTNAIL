.presentation-section
  background-color #fff

  &__wrapper
    max-width: 320px
    margin: 0 auto
    padding: 0 6px
    width 100%
    +above($breakpoints.sm)
      max-width: 750px
      padding: 0 12px
    +above($breakpoints.md)
      max-width: 996px
      padding: 0 15px
    +above($breakpoints.xxl)
      padding: 0 20px
      max-width: 1220px
    +above($breakpoints.xxxl)
      padding: 0 20px
      max-width: 1520px

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 60px 0 60px 0
    +above($breakpoints.md)
      padding 90px 0 80px 0
    +above($breakpoints.xxl)
      padding 134px 0 117px 0

  &__title
    text-align: center
    color: $color-text
    padding 0 0 20px 0
    +above($breakpoints.sm)
      padding 0 0 60px 0
    +above($breakpoints.md)
      padding 0 0 80px 0
    +above($breakpoints.xxl)
      padding 0 0 103px 0

  &__card
    width 280px !important
    +above($breakpoints.sm)
      width 357px !important
    +above($breakpoints.md)
      width 314px !important
    +above($breakpoints.xxl)
      width 386.6px !important
    +above($breakpoints.xxxl)
      width 480px !important

  &__img
    width 280px
    height: auto
    +above($breakpoints.sm)
      width 357px
    +above($breakpoints.md)
      width 314px
    +above($breakpoints.xxl)
      width 386.6px
    +above($breakpoints.xxxl)
      width 480px

