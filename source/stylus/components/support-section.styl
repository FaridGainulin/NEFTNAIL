.support-section
  background-image: url('../images/support-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #f8f8f9

  &__container
    position relative
    z-index 1
    color: $color-text
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 60px 0 70px 0
    +above($breakpoints.md)
      padding 90px 0 100px 0
    +above($breakpoints.xxl)
      padding 134px 0 152px 0

  &__title,
  &__sub-title
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__sub-title
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 20px 0 40px 0
    +above($breakpoints.md)
      padding 20px 0 60px 0
    +above($breakpoints.xxl)
      padding 20px 0 80px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: row
      flex-wrap: wrap
      gap: 10px

  &__card
    width 280px !important
    backdrop-filter: blur(10px);
    background: rgba(245, 245, 245, 0.8)
    padding 20px 5px 20px 20px
    border 1px solid $color-grey-1
    +above($breakpoints.sm)
      width 210px !important
    +above($breakpoints.md)
      padding 25px 5px 25px 26px
      width 262px !important
    +above($breakpoints.xxl)
      width 300px !important

  &__card-icon
    width 40px
    height: 40px
    margin-bottom 14px
    +above($breakpoints.md)
      width 54px
      height: 54px

  &__card-text
    font-size: 13px
    line-height: 125%
    +above($breakpoints.sm)
      font-size: 11px
    +above($breakpoints.md)
      font-size: 14px
    +above($breakpoints.xxl)
      font-size: 16px

  &__img
    width 300px
    height: auto
    margin 0 auto
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      top: 0
      right: 0
      width 270px
    +above($breakpoints.md)
      top: 0
      right: 0
      width 400px
    +above($breakpoints.xxl)
      top: 0
      right: -97px
      width 597px

  &__bottom
    text-align: center
    padding-top 20px
    +above($breakpoints.sm)
      text-align: start
      padding-top 30px
      padding-left 335px
    +above($breakpoints.md)
      padding-top 50px
      padding-left 535px
    +above($breakpoints.xxl)
      padding-top 80px
      padding-left 680px

  &__bottom-text
    padding 12px 0 20px
    +above($breakpoints.sm)
      padding 12px 0 24px

  &__bottom-img
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      width 300px
      height: auto
      bottom: 0
      left: 0
    +above($breakpoints.md)
      width 450px
      bottom: 0
      left: 0
    +above($breakpoints.xxl)
      width 752px
      bottom: 0
      left: -52px

.support-item
  width 280px !important
  margin 0 auto
  +above($breakpoints.sm)
    margin 0
    width 280px !important
  +above($breakpoints.xxl)
    width 320px !important
  +above($breakpoints.xxl)
    width 391px !important